<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true">


    <RelativeLayout
        android:id="@+id/chorus_root_layout"
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="12dp"
            android:id="@+id/chorus_gain_in_seekbar"
            android:layout_alignStart="@+id/textView4"
            android:layout_toStartOf="@+id/chorus_gain_in_value" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chorus_gain_out_seekbar"
            android:id="@+id/chorus_gain_out_value"
            android:layout_toEndOf="@+id/chorus_gain_out_seekbar" />

        <TextView
            android:text="Gain-Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/textView7"
            android:layout_below="@+id/chorus_gain_in_seekbar"
            android:layout_alignStart="@+id/chorus_gain_out_seekbar"
            android:textSize="18sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chorus_gain_out_seekbar"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/chorus_gain_in_seekbar"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/chorus_gain_in_value" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chorus_gain_in_value"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chorus_gain_in_value"
            android:layout_alignBottom="@+id/chorus_gain_in_seekbar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp" />

        <TextView
            android:text="Basic Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView5"
            android:layout_alignEnd="@+id/space3"
            android:layout_marginTop="11dp" />

        <TextView
            android:text="Gain-In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/view10"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="First Delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:textStyle="normal|bold"
            android:id="@+id/textView"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/chorus_gain_out_seekbar"
            android:layout_alignEnd="@+id/space3"
            android:layout_marginTop="18dp"
            android:id="@+id/view" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/view3" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chorus_delay_group_one_switch"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toStartOf="@+id/textView5"
            android:tag="delayRoot"/>

        <TextView
            android:text="Delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_alignStart="@+id/chorus_gain_out_seekbar"
            android:layout_marginTop="19dp"
            android:id="@+id/textView2"
            android:textSize="18sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="12dp"
            android:id="@+id/chorus_delay_one_seekbar"
            android:layout_alignEnd="@+id/chorus_gain_out_seekbar" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chorus_delay_one_seekbar"
            android:layout_toEndOf="@+id/chorus_delay_one_seekbar"
            android:id="@+id/chorus_delay_one_value" />

        <TextView
            android:text="Decay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chorus_delay_one_seekbar"
            android:layout_alignStart="@+id/chorus_delay_one_seekbar"
            android:layout_marginTop="17dp"
            android:id="@+id/textView6"
            android:textSize="18sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="12dp"
            android:id="@+id/chorus_decay_one_seekbar"
            android:layout_toStartOf="@+id/chorus_delay_one_value" />

        <TextView
            android:text="Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chorus_decay_one_seekbar"
            android:layout_alignStart="@+id/chorus_decay_one_seekbar"
            android:layout_marginTop="17dp"
            android:id="@+id/textView8"
            android:textSize="18sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="12dp"
            android:id="@+id/chorus_speed_one_seekbar"
            android:layout_alignEnd="@+id/chorus_decay_one_seekbar" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chorus_decay_one_value"
            android:layout_alignTop="@+id/chorus_decay_one_seekbar"
            android:layout_toEndOf="@+id/chorus_decay_one_seekbar" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chorus_speed_one_seekbar"
            android:layout_toEndOf="@+id/chorus_speed_one_seekbar"
            android:id="@+id/chorus_speed_one_value" />

        <TextView
            android:text="Depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chorus_speed_one_seekbar"
            android:layout_alignStart="@+id/chorus_speed_one_seekbar"
            android:layout_marginTop="17dp"
            android:id="@+id/textView11"
            android:textSize="18sp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginTop="12dp"
            android:id="@+id/chorus_depth_one_seekbar"
            android:layout_alignEnd="@+id/chorus_speed_one_seekbar" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chorus_depth_one_seekbar"
            android:layout_toEndOf="@+id/chorus_depth_one_seekbar"
            android:id="@+id/chorus_depth_one_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modulation"
            android:layout_below="@+id/chorus_depth_one_value"
            android:layout_alignStart="@+id/textView11"
            android:textSize="18sp"
            android:layout_marginTop="17dp"
            android:id="@+id/textView15"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:tag="modulation"
            android:id="@+id/chorus_modulation_one_switch" />

        <TextView
            android:text="Triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView16"
            android:layout_toEndOf="@+id/textView"
            android:id="@+id/textView17" />

        <TextView
            android:text="Sinusoidal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/chorus_modulation_one_switch"
            android:layout_toStartOf="@+id/textView" />

    </RelativeLayout>
</ScrollView>